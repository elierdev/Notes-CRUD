@model IEnumerable<CRUD_ASPNET.Models.Nota>

@{
    ViewData["Title"] = "Notas";
}


<style>
    body {
        background-color: #1e1e1e; 
        color: #d4d4d4; 
        font-family: Poppins, Tahoma, Geneva, Verdana, sans-serif;
    }
    h1 {
        color: #569cd6; 
    }
    .btn {
        border-radius: 30px; 
    }
    .btn-group .btn {
        margin-right: 10px; 
    }
    .btn:last-child {
        margin-right: 0;
    }

    .table-hover tbody tr:hover {
        background-color: #232323; 
        color: white;
    }
    .table {
        background-color: #252526; 
        border-radius: 10px; 
        color: #d4d4d4; 
    }
    .table th {
        background-color: #333333; 
        border-bottom: 2px solid #3c3c3c; 
    }
    .table td, .table th {
        padding: 15px; 
        border: none; 
    }
    
    }
    .btn-success {
        background-color: #4caf50;
        border-color: #4caf50;
        color: white;
    }
    .btn-primary {
        background-color: #007acc;
        border-color: #007acc;
        color: white;
    }
    .btn-info {
        background-color: #ffcc00;
        border-color: #ffcc00;
        color: gray;
    }
    .btn-danger {
        background-color: #d9534f;
        border-color: #d9534f;
        color: white;
    }
    .table-responsive {
        padding: 20px; 
    }
</style>

<h1 class="text-center mb-4" style="font-family: 'Protest Strike','Segoe UI'">NOTAS</h1>
<p class="text-center">Empieza escribiendo una nota.</p>

<div class="mb-4 text-center">
    <a asp-action="Create" class="btn btn-success rounded-pill px-4 py-2">Crear nueva nota</a>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Contenido)</th>
                <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contenido)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-pill px-3">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info rounded-pill px-3">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill px-3">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
